from bs4 import BeautifulSoup
import requests as req

url1 = "https://en.wikipedia.org/wiki/Six_degrees_of_separation"
url2 = "https://en.wikipedia.org/wiki/American_Broadcasting_Company"

# Отправляем HTTP-запрос и получаем ответ
response = req.get(url1)

# Извлекаем HTML-код страницы
html_content = response.text

# Создаем объект BeautifulSoup для анализа HTML-кода
soup = BeautifulSoup(html_content, "html.parser")

# Выводим HTML-код страницы
#print(soup.prettify())

# Поиск всех ссылок по атрибуту a
#links = soup.find_all('a')
#for link in links:
#    print(link.get('href'))

# Извлечение из исходного кода страницы уникальных ссылок на википедию, за исключением внутренних
links = set()
for link in soup.find_all("a"):
    l = link.get("href")
    if l != None and l.startswith("/wiki"):
        links.add(l)
#for link in links:
#    print(link)

selected = set() #список выбираемых ссылок
limit = 0 #счетчик количества шагов


six_handsh = (url1, limit)
while six_handsh:
    url, limit = six_handsh.pop(0)
    if url not in selected:
            selected.add(url)
            for link in soup.find_all("a"):
                 l = link.get("href")
                 if l != None and l.startswith("/wiki"):
                     links.add(l)
            for link in links:
                six_handsh.add((link, limit+))
    if limit > 5:
        break
    if url == url2:
        break
return False
  

for link in links:
    print(link)
         
       
